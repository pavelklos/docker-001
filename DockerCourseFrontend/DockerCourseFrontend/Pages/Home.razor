@page "/"
@inject HttpClient HttpClient

<PageTitle>Home</PageTitle>

<h1>Hello, world!</h1>

<button class="btn btn-primary" @onclick="GetPodcasts">Get Podcasts</button>

<hr/>

@if (_podcasts is not null)
{
    <ul>
        @foreach (var podcast in _podcasts)
        {
            <li>@podcast</li>
        }
    </ul>
}

@code {
    private List<string>? _podcasts;

    private async Task GetPodcasts()
    {
        //_podcasts = await HttpClient.GetFromJsonAsync<List<string>>("http://localhost:5001/podcasts");
        _podcasts = await HttpClient.GetFromJsonAsync<List<string>>("http://localhost:5027/podcasts");
        // throw new NotImplementedException();
    }
}